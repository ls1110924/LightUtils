<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunxian.lightutils.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MaterialMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppMarerialDrawerTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListAdapterActivity"
            android:label="@string/activity_listadapter_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SwitchThemeActivity"
            android:label="@string/activity_switchtheme_title" />

        <activity
            android:name=".LazyFragmentActivity"
            android:label="@string/activity_lazyfragment_title" />
    </application>

</manifest>